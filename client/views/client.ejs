<!DOCTYPE html>
<html lang="en">
    <%- include('header'); -%>

    <div id="app">
        <%- include('components/navbar'); -%>
        <div v-if="loadingScreen" class="loading-screen">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading...</p>
        </div>

        <div v-else>
            <!-- ALerts -->
            <div v-if="errorMessage" class="container alert alert-danger">
                <strong>Error: </strong> {{ errorMessage }}
            </div>
            <div v-if="successMessage" class="container alert alert-success">
                <strong>Success: </strong> {{ successMessage }}
            </div>

            <!-- Login page -->
            <div v-if="!user"><%- include('stages/login'); -%></div>

            <!-- Main page -->
            <div v-else class="container">
                <p>Welcome, {{ user.username }}!</p>
                <!-- <input type="file" id="fileInput" @change="uploadFile"> -->
            </div>
        </div>
    </div>
    <%- include('footer'); -%>
</html>
