<div class="main-menu">
    <div class="create-quiz-container">
        <button class="back-button" @click="closeCreateQuiz()">
            <img src="/static/left.png" alt="back" />
        </button>
        <img src="/static/create-doc.png" alt="create" />

        <div class="quiz-input">
            <div class="date">
                <img src="/static/name.png" alt="name" />
                <span>Quiz name</span>
            </div>
            <input
                type="text"
                placeholder="Enter quiz name"
                v-model="inputs.quizName"
                class="basic-input"
            />
        </div>

        <div class="quiz-input">
            <div class="date">
                <img src="/static/document.png" alt="name" />
                <span>Add text and/or files</span>
            </div>
            <div class="large-inputs">
                <textarea
                    placeholder="Enter text here (max 4000 characters)"
                    v-model="inputs.quizText"
                    class="quiz-text-input"
                ></textarea>
                <div class="file-upload">
                    <div class="file-upload-container">
                        <input
                            type="file"
                            id="fileInput"
                            class="file-input"
                            @change="uploadFile"
                            accept=".pdf,.pptx,.doc,.docx"
                        />
                        <label for="fileInput" class="file-label">
                            <img src="/static/upload.png" alt="upload" />
                            <span>Upload or drop files</span>
                            <div class="info-text">
                                <img src="/static/info.png" alt="info" />
                                <span
                                    >Supported types: PDF, PPTX, DOCX, DOC</span
                                >
                            </div>
                        </label>
                    </div>
                    <div class="date">
                        <img src="/static/folder.png" alt="folder" />
                        <span>{{ filesUploaded.length }} files uploaded:</span>
                        <span
                            v-for="(file, index) in filesUploaded"
                            :key="index"
                            class="file-name"
                        >
                            {{ file.name
                            }}<span
                                v-if="index < filesUploaded.length - 1"
                                class="file-name"
                                >,
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <button @click="uploadQuiz()" class="main-btn">Continue</button>
    </div>
</div>
